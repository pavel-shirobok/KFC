.kfc_magnet_button
  display inline-block
  padding 3px
  background  linear-gradient(to top, rgb(250, 196, 111), rgb(254, 219, 164))
  cursor pointer

  .kfc_magnet_button_icon
    display inline-block
    width 16px
    height @width
    background url(http://st.kinozal.tv/pic/favicon.ico)
    vertical-align middle

  .kfc_magnet_button_label
    display inline-block
    padding 3px
    background  linear-gradient(to top, rgb(255 231 195), rgb(255 255 255))
    text-transform  uppercase
    font-size  11px
    vertical-align middle
    text-shadow 1px 1px 3px rgba(0, 0, 0, 0.24)
    color rgba(0, 0, 0, 0.43)
    font-weight bold